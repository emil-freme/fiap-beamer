% Title page
\defbeamertemplate*{title page}{fiap}[1][]
{
\begingroup
    \begin{tikzpicture}[overlay, remember picture]
    \draw[fill=fiapDarkGrey] (-1in,-\paperheight) rectangle
    (\paperwidth,\paperheight); %background
\end{tikzpicture}
    \begin{center}
        \usebeamercolor[fg]{title}\usebeamerfont{title}\inserttitle\par%
        \usebeamercolor[fg]{title}\usebeamerfont{subtitle}\insertsubtitle\par%
    \end{center}
    \begin{tikzpicture}[overlay, remember picture]
    \node[anchor=north east] at (\textwidth, -0.5in){
    \begin{beamercolorbox}[wd=\textwidth,right,sep=5pt]{titlePage}
        \usebeamercolor[fg]{date}\usebeamerfont{author}\insertinstitute\par%
        \usebeamercolor[fg]{author}\usebeamerfont{author}\insertauthor\par%
    \end{beamercolorbox}};

\end{tikzpicture}
\endgroup
}




